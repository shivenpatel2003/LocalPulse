# LocalPulse Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL (e.g., https://xxxxx.supabase.co)
SUPABASE_URL=your_supabase_project_url

# Your Supabase anon/service key
SUPABASE_KEY=your_supabase_api_key

# =============================================================================
# AI PROVIDER KEYS
# =============================================================================
# Anthropic API key for Claude (used for analysis agents)
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI API key (used for embeddings with text-embedding-3-small)
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# EXTERNAL DATA SOURCES
# =============================================================================
# Google Places API key for restaurant/business data collection
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Maximum concurrent collector agents
MAX_COLLECTOR_AGENTS=5

# Analysis agent model (claude-3-5-sonnet-20241022, claude-3-opus-20240229)
ANALYSIS_MODEL=claude-3-5-sonnet-20241022

# Embedding model
EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# MEMORY CONFIGURATION
# =============================================================================
# Short-term memory TTL in seconds (default: 1 hour)
SHORT_TERM_MEMORY_TTL=3600

# Episodic memory retention in days
EPISODIC_MEMORY_RETENTION_DAYS=30
