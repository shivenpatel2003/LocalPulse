# =============================================================================
# LocalPulse Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# All values marked as required must be set for the application to start

# -----------------------------------------------------------------------------
# Supabase
# -----------------------------------------------------------------------------
SUPABASE_URL=
SUPABASE_KEY=

# -----------------------------------------------------------------------------
# Neo4j (Knowledge Graph)
# -----------------------------------------------------------------------------
NEO4J_URI=
NEO4J_USER=
NEO4J_PASSWORD=

# -----------------------------------------------------------------------------
# Pinecone (Vector Store)
# -----------------------------------------------------------------------------
PINECONE_API_KEY=
PINECONE_INDEX_NAME=localpulse-reviews

# -----------------------------------------------------------------------------
# OpenAI (Embeddings)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# Anthropic (Claude LLM)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Cohere (Reranking)
# -----------------------------------------------------------------------------
COHERE_API_KEY=

# -----------------------------------------------------------------------------
# Google (Places API)
# -----------------------------------------------------------------------------
GOOGLE_PLACES_API_KEY=

# -----------------------------------------------------------------------------
# Redis (Caching / Working Memory)
# -----------------------------------------------------------------------------
REDIS_URL=

# -----------------------------------------------------------------------------
# SendGrid (Email Delivery)
# -----------------------------------------------------------------------------
SENDGRID_API_KEY=

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
